<div id="post_content">
	<h1 class="title"><%= @post.title %></h1>
	<p class="date">
		Dodano <%= time_ago_in_words(@post.created_at) %> temu
		<% if user_signed_in? %>
		| <%= link_to 'Edytuj', edit_post_path(@post) %> |
		  <%= link_to 'UsuÅ„', post_path(@post), method: :delete, data: { confirm: 'Jestes pewien?' } %>
	  <% end %>
	</p>
	

	<div id="comments">
		<h2><%= @post.comments.count %> Komentarzy</h2>
		<%= render @post.comments %>

		<h3>Dodaj komentarz:</h3>
		<%= render "comments/form" %>
	</div>
</div>